doctype html
html(lang="en")
  head
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous")
    link(rel='stylesheet', href='/styles/login.css')
  body
    div(class="container login-form")
      h2 Log in
      if locals.errors
        ul
          each error in errors
            li=error.msg
      form(action='/session/login', method='post')
        input(class="form-control" type='text' name='name' value= locals.name placeholder="Enter your email")
        input(class="form-control input-password" type='text' name='password' placeholder="Password")
        button(class= "btn-default btn login-btn") Login
        br
        a(href='/user/signup' class='create-text') Create An Account