doctype html
html(lang="en")
  head
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous")
    link(rel='stylesheet', href='/styles/signup.css')    
  body
    div(class="signup-form")
      h2 Create a new account
      if locals.errors
        ul
          each error in errors
            li=error.msg
      form(action='/user/create' method='post')
        p First Name:
        input(class="form-control" type='text' name='first' value=locals.first)
        p Last Name:
        input(class="form-control" type='text' name='last' value=locals.last)
        p Email:
        input(class="form-control" type='text' name='email' value=locals.email)
        p Password:
        input(class="form-control" type='password' name='password')
        p Verify Password:
        input(class="form-control" type='password' name='verifyPassword')
        button(class= "btn-default btn create-btn") Create
        br
        a(class="return-text" href="/session/login") Return to Login Page